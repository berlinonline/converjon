{
    "server": {
        "port": 8000
    },
    "logging": {
        "access": true,
        "debug": false,
        "error": true
    },
    "bouncer": {
        "threshhold": 10, //requests per second
        "limit": 100 //requests before throttling kicks in
    },
    "converter": {
        "defaultMimeType": "image/jpeg",
        "aoiName": "midas_aoi",
        "paddingColor": "#DFDFDF" //imagemagicks default shade of gray for borders
    },
    "constraints": {
        "global": {
            "width": {
                "min": 1,
                "max": 2000
            },
            "height": {
                "min": 1,
                "max": 2000
            },
            "quality": {
                "min": 1,
                "max": 95
            },
            "colors": {
                "min": 2,
                "max": 256
            }
        },
        "url": {
            "^.+:\/\/localhost": {
                "quality": {
                    "max": 100,
                    "min": 20
                }
            }
        }
    },
    "process": {
        "maxRunningProcesses": 20,
        "maxBufferSize": 204800, // == 200KB
        "timeout": 30000 //30 secs
    },
    "analyzer": {
        "aoiName": "AOI"
    },
    "urlChecker": {
        /*
         * Remember to escape backslashes in RegExps as \\ in JSON files
         * or else the config parser will fail.
         */
        "urlWhitelist": {
            "localhost": "^.+:\/\/localhost",
            "127.0.0.1": "^.+:\/\/127.0.0.1",
            "::1": "^.+:\/\/::1"
        }
    },
    "targetStore": {
        "basePath": "./cache/target/",
        "maxAge": 10,
        "clientRequestTimeout": 10000
    },
    "sourceStore": {
        "basePath": "./cache/source/",
        "maxAge": 300
    },
    "downloader" : {
        "tempPath" : "./cache/temp/",
        "acceptedContentTypes": [
            "image/jpeg",
            "image/pjpeg",
            "image/png",
            "image/gif"
        ]
    },
    "demoPage": {
        "images": {
            "http://localhost:%%PORT%%/test_image_sparrow.jpg":  [
                {"width": 130, "height": 300, "quality": 5},
                {"width": 170, "height": 300, "quality": 10},
                {"width": 215, "height": 300, "quality": 20},
                {"width": 485, "height": 300, "quality": 30},

                {"width": 1000, "height": 200, "quality": 70},
                {"width": 1000, "height": 100, "quality": 70}
            ],
            "http://localhost:%%PORT%%/test_image_sparrow_2.jpg":  [
                {"width": 400, "height": 370},
                {"width": 600, "height": 370, "mime": "image/gif", "colors": 2},
                {"width": 1000},
                {"width": 1000, "quality": 5}
            ]
        }

    },
    "testServer": {
        "port": 8001
    }
}
