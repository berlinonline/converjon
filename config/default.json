{
    "server": {
        "port": 8000
    },
    "logging": true,
    "bouncer" : {
        "threshhold": 10, //requests per second
        "limit": 100 //requests before throttling kicks in
    },
    "processPool": {
        "convert": {
            "maxWorkers": 10
        },
        "analyze": {
            "maxWorkers": 10
        }
    },
    "imageConverter": {
        "aoiName": "midas_aoi",
        "paddingColor": "#DFDFDF" //imagemagicks default shade of gray for borders
    },
    "imageAnalyzer": {
        "aoiName": "AOI"
    },
    "imageFetcher": {
        "urlWhitelist": {
        },
        "acceptedContentTypes": [
            "image/jpeg",
            "image/png",
            "image/gif"
        ],
        "defaultOutputMime": "image/jpeg",
        "cache": {
            "sourceBasePath": "./cache/source/",
            "targetBasePath": "./cache/target/",
            "sourceCacheTime": 3600, //seconds
            "outputCacheTime": 300 //seconds
        }
    },
    "demoPage": {
        "image": "http://localhost:9876/test_image_sparrow.jpg",
        "conversions": [
            {"width": 130, "height": 300, "quality": 5},
            {"width": 170, "height": 300, "quality": 10},
            {"width": 215, "height": 300, "quality": 20},
            {"width": 485, "height": 300, "quality": 30},

            {"width": 1000, "height": 200, "quality": 70},
            {"width": 1000, "height": 100, "quality": 70},

            {"width": 400, "height": 370},
            {"width": 600, "height": 370, "mime": "image/gif", "colors": 2},
            {"width": 1000},
            {"width": 1000, "quality": 5}
        ]
    },
    "testServer": {
        "port": 9876
    }
}
