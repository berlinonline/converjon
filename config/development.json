{
    "logging": {
        "access": false,
        "debug": true,
        "error": true,
        "logWithTimeStamp": true
    },
    "converter": {
        "paddingColor": "#FFBBBB" //imagemagicks default shade of gray for borders
    },
    "constraints": {
        "global": {
            "quality": {
                "jpeg_quality": {
                    "min": 10,
                    "max": 95
                }
            }
        },
        "url": {
            "^.+:\/\/localhost": { //global constraint can eb overridden for individual URLs
                "quality": {
                    "max": 70,
                    "min": 5
                }
            }
        }
    },
    "urlChecker": {
        /*
         * Remember to escape backslashes in RegExps as \\ in JSON files
         * or else the config parser will fail.
         */
        "urlWhitelist": {
            "all": ".*"
        }
    },
    "process": {
        "maxRunningProcesses": 2,
        "timeout": 5000, //10 secs
        "maxWaitingTime": 10000 //30 secs, if there are processes waiting and the last process ended more that X seconds ago, the "ready" URL will report that the server is not available (with an HTTP 50X)
    }
}
